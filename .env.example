# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=linux_control_hub
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:your_secure_password@db:5432/linux_control_hub

# Application Configuration
NODE_ENV=production
PORT=3000
SESSION_SECRET=your_secure_session_secret

# Initial Admin User (will be created on first run)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_admin_password
ADMIN_EMAIL=admin@example.com

# Optional: Uncomment to enable TLS (recommended for production)
# SSL_KEY_PATH=/path/to/privkey.pem
# SSL_CERT_PATH=/path/to/fullchain.pem

# Vuls Vulnerability Scanner Configuration
VULS_SERVICE_URL=http://vuls:5515
# Optional: Disable Vuls integration
# VULS_DISABLED=true